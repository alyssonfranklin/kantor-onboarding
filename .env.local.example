# =============================================
# Application Environment Configuration
# =============================================

# Application Settings (required)
NODE_ENV=development
PORT=3000

# URLs and Endpoints (required)
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_API_VERSION=v1
NEXT_PUBLIC_ENV=development

# Cookie and Authentication Settings
# In production, this should be set to .voxerion.com
# NEXT_PUBLIC_COOKIE_DOMAIN=localhost
JWT_SECRET=voxerion_secret_key_change_in_production
JWT_EXPIRY=7d
JWT_REFRESH_EXPIRY=30d

# MongoDB Configuration (required)
MONGODB_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/your_database?retryWrites=true&w=majority

# CORS Settings
ALLOWED_ORIGINS=https://script.google.com,https://www.google.com,http://localhost:3000

# API Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_TIME=900000

# Logging Configuration
LOG_LEVEL=info

# Security Settings
CSRF_SECRET=voxerion_csrf_secret_change_in_production
# Set to true to enforce HTTPS in development (defaults to true in production)
# ENFORCE_HTTPS=false

# OpenAI Configuration (if using assistants)
OPENAI_API_KEY=your_openai_api_key

# Optional: Analytics and Monitoring
# NEXT_PUBLIC_ENABLE_ANALYTICS=false
# ANALYTICS_ID=your-analytics-id
# SENTRY_DSN=your-sentry-dsn

# Feature Flags
# NEXT_PUBLIC_ENABLE_NEW_FEATURES=false
# NEXT_PUBLIC_MAINTENANCE_MODE=false