# =============================================
# Testing Environment Configuration
# =============================================

# Application Settings
NODE_ENV=test
PORT=3001

# URLs and Endpoints
NEXT_PUBLIC_APP_URL=http://localhost:3001
NEXT_PUBLIC_BASE_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_ASSETS_URL=http://localhost:3001

# MongoDB Configuration (use a test database to prevent affecting development data)
MONGODB_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/test_database?retryWrites=true&w=majority

# Authentication (using consistent test keys)
JWT_SECRET=test_jwt_secret_key
JWT_EXPIRY=1h
JWT_REFRESH_EXPIRY=1d

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3001

# Rate Limiting (disabled for tests)
RATE_LIMIT_REQUESTS=0
RATE_LIMIT_TIME=0

# Logging Configuration 
LOG_LEVEL=error