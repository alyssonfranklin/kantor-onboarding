# =============================================
# Production Environment Configuration
# =============================================

# Application Settings
NODE_ENV=production
PORT=3000

# URLs and Endpoints
NEXT_PUBLIC_APP_URL=https://app.voxerion.com
NEXT_PUBLIC_BASE_URL=https://app.voxerion.com
NEXT_PUBLIC_API_URL=https://app.voxerion.com/api
NEXT_PUBLIC_ASSETS_URL=https://app.voxerion.com

# CORS Settings
ALLOWED_ORIGINS=https://script.google.com,https://www.google.com,https://app.voxerion.com

# Rate Limiting (stricter for production)
RATE_LIMIT_REQUESTS=50
RATE_LIMIT_TIME=900000

# Logging Configuration
LOG_LEVEL=error

