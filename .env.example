# Server Configuration
PORT=3001
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_secret_key_here
JWT_EXPIRY=7d
JWT_REFRESH_EXPIRY=30d

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://script.google.com,https://www.google.com

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Admin Password
ADMIN_PASSWORD=your_admin_password

# Rate Limiting for API
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_TIME=900000

# Logging
LOG_LEVEL=info

# Google Sheets (Legacy - no longer used with MongoDB implementation)
GOOGLE_SHEET_ID=1BSbZyBdsV_x4sAhkrayqxHKrZKEof7Fojm6vbi4IKc4
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account-email@example.com
GOOGLE_PRIVATE_KEY="your-private-key"