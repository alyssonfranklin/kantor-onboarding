# =============================================
# Development Environment Configuration
# =============================================

# Application Settings
NODE_ENV=development
PORT=3000

# URLs and Endpoints
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_ASSETS_URL=http://localhost:3000

# CORS Settings (more permissive for development)
ALLOWED_ORIGINS=https://script.google.com,https://www.google.com,http://localhost:3000,http://localhost:4000

# Rate Limiting (more relaxed for development)
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_TIME=900000

# Logging Configuration
LOG_LEVEL=debug

# The following variables should be provided in .env.local which is not committed to git
# MongoDB Configuration
# MONGODB_URI=

# Authentication
# JWT_SECRET=
# JWT_EXPIRY=
# JWT_REFRESH_EXPIRY=

# OpenAI Configuration
# OPENAI_API_KEY=